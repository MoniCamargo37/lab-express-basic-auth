<form action="/auth/signup" method="post">
  <label>Username</label>
  <input type="text" name="username" placeholder="Mary Carls" required="true" />
  <label>E-mail</label>
  <input
    type="email"
    name="email"
    placeholder="mary@gmail.com"
    required="true"
  />
  <label>Password</label>
  <input
    type="password"
    name="password"
    placeholder="*********"
    required="true"
  />
  <button type="submit">Sign Up</button>
  <a href="/auth/login">Already have an account? Log in!</a>
  {{#if error}}
    <p style="color: red">{{error}}</p>
  {{/if}}
</form>